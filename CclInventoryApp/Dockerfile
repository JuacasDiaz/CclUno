# Utilizar una imagen base de .NET para la construcci贸n con el SDK de .NET 8.0
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /app

# Copiar los archivos de proyecto y restaurar las dependencias
COPY *.csproj ./
RUN dotnet restore

# Copiar todo y construir la aplicaci贸n
COPY . ./
RUN dotnet publish -c Release -o out

# Utilizar una imagen base de .NET para la ejecuci贸n con el runtime de .NET 8.0
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app/out .

# Exponer el puerto
EXPOSE 80

# Comando para ejecutar la aplicaci贸n
ENTRYPOINT ["dotnet", "CclInventoryApp.dll"]
